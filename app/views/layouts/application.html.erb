<!DOCTYPE html>
<html>
<head>
  <title>IdeaPointsBox</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div>
  <% flash.each do |type, msg| %>
    <%= content_tag :div, msg, class: "flash_#{type}" %>
  <% end %> <br>

</div>

<%= yield %>

</body>
</html>
