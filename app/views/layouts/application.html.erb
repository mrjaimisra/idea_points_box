<!DOCTYPE html>
<html>
<head>
  <title>IdeaPointsBox</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
    <h3>
      <% if current_user %>
        <%= link_to "Logout", logout_path, method: :delete %>
      <% end %>
    </h3>

  <% flash.each do |type, msg| %>
    <%= content_tag :div, msg, class: ".flash_#{type}" %>
  <% end %> <br>

<%= yield %>

</body>
</html>
