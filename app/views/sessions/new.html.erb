<h1>idea points box</h1>
<hr/>

<div class="sign-in">
  <h2>Sign In</h2>
  <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username %><br>
      <%= f.label :password %>
      <%= f.password_field :password %><br>
      <%= f.submit "Login" %>
  <% end %>
</div>

<div class="create-account">
  <p>Join Idea Points Box and start sharing your ideas with the world.
    Let the community help grow your ideas.</p>
  <h2>Create Account</h2>
  <%= link_to "Create Account", new_user_path %>
</div>